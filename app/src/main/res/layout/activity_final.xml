<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.hska.wheretostudy.RegistrationActivity"
    android:orientation="vertical">
<TableLayout
    android:id="@+id/simpleTableLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"> <!-- stretch the second column of the layout-->

    <!-- first row of the table layout-->
    <TableRow

        android:id="@+id/firstRow"
        android:layout_width="fill_parent"
        android:layout_height="98dp">

        <!-- first element of the row-->
        <TextView

            android:id="@+id/rang"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="Rang"
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/land"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="18dip"
            android:text="Land"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d3d3d3"
            android:padding="18dip"
            android:text="Score"
            android:textColor="#000"
            android:textSize="14dp" />
    </TableRow>

    <TableRow

        android:id="@+id/secondRow"
        android:layout_width="fill_parent"
        android:layout_height="98dp">

        <!-- first element of the row-->
        <TextView

            android:id="@+id/simpleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="1."
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/firstCountry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#afeeee"
            android:padding="18dip"
            android:text="Text 1"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/firstScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d3d3d3"
            android:padding="18dip"
            android:text="Score 1"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>

    <TableRow

        android:id="@+id/thirdRow"
        android:layout_width="fill_parent"
        android:layout_height="98dp">

        <!-- first element of the row-->
        <TextView

            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="2."
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/secondCountry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#afeeee"
            android:padding="18dip"
            android:text="Text 1"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/secondScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#d3d3d3"
            android:padding="18dip"
            android:text="Score 1"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>

    <TableRow

        android:id="@+id/forthRow"
        android:layout_width="fill_parent"
        android:layout_height="98dp">

        <!-- first element of the row-->
        <TextView

            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#b0b0b0"
            android:padding="18dip"
            android:text="3."
            android:textColor="#000"
            android:textSize="12dp" />

        <TextView

            android:id="@+id/thirdCountry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#afeeee"
            android:padding="18dip"
            android:text="Text 1"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/thirdScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#D3D3D3"
            android:padding="18dip"
            android:text="Score 1"
            android:textColor="#000"
            android:textSize="14dp" />

    </TableRow>
</TableLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="startAgain"
        android:text="Start again" />
</LinearLayout>